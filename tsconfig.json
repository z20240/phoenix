{
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "src",
    "outDir": "dist",
    "target": "es2018",
    "sourceMap": false,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "typeRoots": [
      "node_modules/@types",
      "src/**/*"
    ],
    "lib": [
      "es2018"
    ],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
